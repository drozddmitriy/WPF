<Window x:Class="WpfAGalery.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closed="Window_Closed_1">
    <Canvas>
        <Border Height="189" Width="135" BorderBrush="Blue" BorderThickness="2" CornerRadius="8" Canvas.Left="48" Canvas.Top="10"/>
        <TextBox Name="text_log" Canvas.Left="65" Canvas.Top="55" Width="100"></TextBox>
            <Label Content="Login:" Canvas.Left="65" Canvas.Top="24"/>
            <Label Canvas.Left="65" Canvas.Top="82">Password:</Label>
            <PasswordBox Name="pass_log" Canvas.Left="65" Canvas.Top="108" Width="100"></PasswordBox>
        <Button Content="Login" Canvas.Left="65" Canvas.Top="143" Width="100" Click="Button_Click_1"/>
        <Button Content="Registration" Canvas.Left="65" Canvas.Top="170" Width="100" Click="Button_Click_2"/>
    </Canvas>
</Window>
